{% extends "layout.twig" %}
{% block head %}
    <style>
        #edit:hover {
            color: #007bff;
        }
    </style>
{% endblock %}
{% block content %}
    {% if alert %}
        <div class="alert alert-success m-0">{{ alert }}</div>
    {% endif %}
    <div>
        <a class="btn btn-outline-light" href="/" id="edit">Curriculum</a>
        <div class="jumbotron jumbotron-fluid bg-primary text-white">
            <div class="container">
                <h1 class="display-3">
                    {% block title %}{% endblock %}
                </h1>
                <p class="lead">Añade información relevante para potenciar tu resumen curricular</p>
            </div>
        </div>
        <div class="container">
            {% block form %}{% endblock %}
        </div>
    </div>
{% endblock %}
